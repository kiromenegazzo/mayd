{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "lib": ["ESNext", "DOM"],
    "target": "es6",
    "jsx": "react",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "baseUrl": "./src",
    "allowJs": true,
    "allowUmdGlobalAccess": true,
    "strictNullChecks": true,
    "paths": {
      "@core/*": ["core/*"],
      "@features/*": ["features/*"],
    }
  },
  "plugins": [
    {
      "transform": "typescript-plugin-styled-components",
      "type": "config",
      "displayName": true
    }
  ],
  "include": [
    ".eslintrc.js",
    "src/**/*.ts",
    "src/**/*.tsx",
    "jest.config.ts",
    "jest.setup.ts",
    "*.d.ts",
    "*.spec.tsx"
  ],
  "exclude": [
    "node_modules",
  ]
}
